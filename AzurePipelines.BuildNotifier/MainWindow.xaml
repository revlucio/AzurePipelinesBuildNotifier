<Window x:Class="AzurePipelines.BuildNotifier.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="Build Notifier Settings" Height="350" Width="525">
    <StackPanel Orientation="Vertical">
        <TextBlock Text="Server URL:" />        
        <TextBox Name="ServerUrl"></TextBox>
        
        <TextBlock Text="Project:" />        
        <TextBox Name="ProjectName"></TextBox>
        
        <TextBlock Text="Build Definition ID:" />        
        <TextBox Name="BuildId"></TextBox>
        
        <TextBlock Text="Personal Access Token:" />        
        <TextBox Name="Token"></TextBox>
        
        <Button Name="SaveButton">Save</Button>
        <TextBlock Name="Message"></TextBlock>
    </StackPanel>
</Window>
